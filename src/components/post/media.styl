@media (min-width $desktopMedium)
  .post
    min-width 780px

  .post__image
    img
      max-height 320px

@media (min-width $desktopLarge)
  .post
    min-width 980px

  .post__image
    img
      max-height 400px

@media (min-width $tabletPortrait)
  .post
    padding 50px 25px 100px

  .post-info
    padding-left 25px
    max-width 70%

  .post-info__title
    font-size 20px

  .post-tags-date
    font-size 13px

  .post__body
    padding-left 25px
    min-width 370px

  .post__link
    left 50px
    bottom 25px
