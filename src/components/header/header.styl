@import "../../stylus/global/mixins/absolute-center"

.header
  height 200px
  position relative

.header__logo
  display block
  absolute-center()

.header__toggle-sidebar
  width 15px
  height 15px
  absolute-center()
  right auto
  left 20px

.header__close-sidebar
  display none
  width 15px
  height 15px
  absolute-center()
  right 20px
  left auto
  z-index 3

.header__close-sidebar.visible
  display: block

@import "media"
