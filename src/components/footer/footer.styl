.footer
  width 100%
  background $footer__background
  padding 100px 290px 85px
  box-sizing border-box
  position relative
  &::before
    content ''
    width 100%
    height 8px
    background url('../assets/images/wave.png') 0px 0px repeat-x
    background-size 30px 8px
    position absolute
    top -8px
    left 0

.footer-content
  width 750px
  margin 0 auto

.wrapper-region-social
  display flex
  flex-flow row
  justify-content space-between
  width 100%
  margin-bottom 100px

.footer-region
.footer-social
  display flex
  flex-flow row
  width 280px
  padding 0

.footer-region__item
.footer-social__item
  margin-left 15px
  font-size 35px
  color $grey--dark
  cursor pointer
  &:first-child
    margin-left 0

.footer-region__item
  background url(../assets/images/markets.png) center center no-repeat;
  width 35px
  height 35px
  background-size cover

.footer-region__item.sweden
  background-position 0 0

.footer-region__item.norway
  background-position -81px 0

.footer-region__item.finland
  background-position -121px 0

.footer-region__item.uk
  background-position -40px 0

.footer-region__item.global
  background-position -161px 0

.footer-links
  display flex
  flex-wrap wrap
  width 350px
  margin-bottom 75px
  padding 0
  color $grey--dark

.footer-links__item
  flex 1 0 50%
  margin-bottom 25px
  cursor pointer

.footer-legal
  display flex
  margin-bottom 20px
  padding-top 45px
  border-top 5px solid $footer__border--legal
  box-sizing border-box
  color $grey--dark

.footer-legal__logos
  margin-right 55px
  margin-bottom 75px
  width 110px

.footer-legal__logos img
  width 100%

.footer-legal__logos img:first-child
  margin-bottom 15px

.footer-legal__text
  width 580px

.footer-payment-logos
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content flex-end

.footer-payment-logos__item
  margin-right 15px
  background-image url('../assets/images/payment-methods.png')
  height 31px
  display block

.footer-payment-logos__item.visa
  width 45px
  background-position 0 0

.footer-payment-logos__item.mastercard
  width 44px
  background-position -62px 0

.footer-payment-logos__item.bank
  width 66px
  background-position -124px 0

.footer-payment-logos__item.skrill
  width 45px
  background-position -223px 0px

.footer-payment-logos__item.neteller
  width 74px
  background-position -302px 0px

.footer-payment-logos__item.paysafe
  width 96px
  background-position -401px 0px

.footer-payment-logos__item.pugglepay
  width 96px
  background-position -522px 0px

.footer-payment-logos__item.gamcare
  width 32px
  background url('../assets/images/gamcare.png') center center no-repeat
  background-size contain

.footer-payment-logos__item.eighteen
  width 32px
  background url('../assets/images/18.png') center center no-repeat
  background-size contain

@import "media"
